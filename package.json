{
  "name": "kidpix-jpp",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "dev-app": "vite dev & echo $! > .vite.pid",
    "dev-app-stop": "kill $(cat .vite.pid 2>/dev/null) 2>/dev/null && rm -f .vite.pid || true",
    "dev-docs": "mkdocs serve",
    "build": "vite build --outDir dist --base=/ && mkdocs build --site-dir dist/docs && vite build --outDir dist-gh --base=/kidpix/ && mkdocs build --site-dir dist-gh/docs",
    "preview-release": "python3 -m http.server 8080 --directory dist",
    "preview-github-pages": "echo \"WARNING: SERVING APP AT http://localhost:8080/kidpix/ , NOTE THE /kidpix/ !! \" && python3 -m http.server 8080 --directory dist-gh",
    "test": "vitest run",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage",
    "test:e2e": "playwright test --reporter=line",
    "test:e2e:headed": "playwright test --headed --reporter=line",
    "test:e2e:ui": "playwright test --ui --reporter=line",
    "test:e2e:single": "playwright test tests/e2e/pencil.spec.ts --project=chromium --workers=1 --reporter=line",
    "test:e2e:showlastreport": "playwright show-report",
    "release:patch": "yarn version --patch && git push origin --tags",
    "release:minor": "yarn version --minor && git push origin --tags",
    "release:major": "yarn version --major && git push origin --tags",
    "screenshot": "node scripts/screenshot-capture.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "3.2.3",
    "globals": "^15.11.0",
    "jsdom": "^26.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "~5.6.2",
    "vite": "^6.3.6",
    "vite-plugin-terminal": "^1.3.0",
    "vitest": "3.2.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
